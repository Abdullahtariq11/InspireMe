<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InspireMe.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InspireMe.App"
    xmlns:pages="clr-namespace:InspireMe.App.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="InspireMe.App"
    >


    <TabBar>
        <ShellContent
            Shell.TabBarBackgroundColor="Black"
            Shell.TabBarForegroundColor="#E5E86C"
            Shell.TabBarTitleColor="#E5E86C"
            Shell.TabBarUnselectedColor="White"
            Title="Home"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="HomePage"/>

        <ShellContent
            Shell.TabBarBackgroundColor="Black"
            Shell.TabBarForegroundColor="#E5E86C"
            Shell.TabBarTitleColor="#E5E86C"
            Shell.TabBarUnselectedColor="White"
            Title="Favourites"
            Icon="favourite_icon.png"
            ContentTemplate="{DataTemplate pages:FavouritePage}"
            Route="FavouritePage"/>
    </TabBar>

</Shell>
